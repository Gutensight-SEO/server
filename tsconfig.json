{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6", "es2017"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "types": ["express", "morgan", "jsonwebtoken", "lodash", "bcryptjs", "gravatar", "multer", "swagger-jsdoc"],
    "moduleResolution": "node"
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "dist"]
}
